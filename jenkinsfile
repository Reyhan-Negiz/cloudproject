pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: 'main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/nrtgyk/cloudproject.git']]])
                }
            }
        }

        
    }

    post {
        success {
            // Başarılı bir şekilde tamamlandığında yapılacak işlemler
            echo 'Pipeline başariyla tamamlandi!'
        }

        failure {
            // Hata durumunda yapılacak işlemler
            echo 'Pipeline kontrol edilmeli.'
        }

        always {
            // Her durumda yapılacak işlemler
            echo 'Pipeline tamamlandi.'
        }
    }

    // Jenkins pipeline sona erdiğinde HTTP sunucusunu kapatma adımı

}
